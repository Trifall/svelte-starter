{
	"name": "svelte-starter",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"start": "bun run build/index.js",
		"preview": "vite preview",
		"prepare": "husky && svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"db": "drizzle-kit",
		"ui": "bun x shadcn-svelte@next",
		"auth": "bun x @better-auth/cli@latest",
		"auth:generate": "bun x @better-auth/cli@latest generate --y --output ./src/lib/server/schema/auth.schema.ts && prettier --write ./src/lib/server/schema/auth.schema.ts",
		"railway": "bun x @better-auth/cli@latest generate --y --output ./src/lib/server/schema/auth.schema.ts && prettier --write ./src/lib/server/schema/auth.schema.ts && bun x drizzle-kit push --force --verbose"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.7",
		"@eslint/js": "^9.22.0",
		"@sveltejs/kit": "^2.20.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@types/eslint": "^9.6.1",
		"autoprefixer": "^10.4.21",
		"bits-ui": "^1.3.13",
		"bun-types": "^1.2.5",
		"clsx": "^2.1.1",
		"drizzle-kit": "^0.30.5",
		"eslint": "^9.22.0",
		"eslint-config-prettier": "^10.1.1",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^16.0.0",
		"husky": "^9.1.7",
		"prettier": "^3.5.3",
		"prettier-plugin-organize-imports": "^4.1.0",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.23.1",
		"svelte-check": "^4.1.5",
		"tailwind-merge": "^2.6.0",
		"tailwind-variants": "^0.3.1",
		"tailwindcss": "^3.4.17",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.1",
		"vite": "^6.2.2"
	},
	"dependencies": {
		"@tailwindcss/typography": "^0.5.16",
		"better-auth": "^1.2.4",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.39.3",
		"postgres": "^3.4.5",
		"svelte-adapter-bun": "^0.5.2"
	},
	"engines": {
		"node": "^22.0.0"
	}
}
