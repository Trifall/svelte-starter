{
	// hide files that we usually don't need to see in explorer
	"files.exclude": {
		".npmrc": true,
		".gitattributes": true
	},

	"files.readonlyInclude": {
		"**/.svelte-kit/*/**": true,
		"pnpm-lock.yaml": true
	},
	"files.watcherExclude": {
		"**/.svelte-kit/*/**": true,
		"pnpm-lock.yaml": true
	},
	"search.exclude": {
		"**/.svelte-kit/**": true,
		"pnpm-lock.yaml": true
	},

	// use LF line endings
	"files.eol": "\n",

	// more readable tabs
	"workbench.editor.customLabels.patterns": {
		"**/routes/**/+*.*": "${dirname}/${filename}.${extname}"
	},

	// smol performance improvements
	"editor.minimap.renderCharacters": false,

	// set prettier as default formatter for json, ts, js, html, css
	"[json][jsonc][typescript][javascript][html][css]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

	// svelte support
	"svelte.enable-ts-plugin": true,
	"[svelte]": {
		"editor.defaultFormatter": "svelte.svelte-vscode"
	},

	// auto-format on save & paste
	"editor.formatOnSave": true,
	"editor.formatOnPaste": true
}
